<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="app.some.com.mayagoor.MainActivity">


    <LinearLayout

        android:layout_width="match_parent"

        android:layout_height="match_parent"
        android:background="@drawable/back3"
        android:orientation="vertical"
        android:theme="@android:style/Theme.Holo.NoActionBar.Fullscreen"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/txtHead"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="4"
            android:gravity="bottom|center_horizontal"
            android:paddingBottom="10dp"
            android:text="מיה גור"
            android:textColor="@android:color/background_light"
            android:textSize="40sp" />

        <TextView
            android:id="@+id/txtSomeHead"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:text="לק גל מקצועי ואיכותי"
            android:textColor="@android:color/background_light"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/appText"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="5"
            android:gravity="center"
            android:text="dsfsd"
            android:textColor="@android:color/background_light"
            android:textSize="18sp" />

        <Button
            android:id="@+id/btnGoToAppointmentPage"
            android:layout_width="300dp"
            android:layout_height="0dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="10dp"
            android:layout_weight="1"
            android:background="@drawable/button_shape"
            android:onClick="goToAppointmantPage"
            android:text="קביעת תור" />

        <Button
            android:id="@+id/btnGoToDetailsPage"
            android:layout_width="300dp"
            android:layout_height="0dp"
            android:layout_gravity="center_horizontal"
            android:layout_weight="1"
            android:background="@drawable/button_shape"
            android:onClick="goToDetailsPage"
            android:text="פרטים" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1.5" />

    </LinearLayout>

</android.support.constraint.ConstraintLayout>

